{
  "name": "kod-revyoo",
  "version": "1.0.0",
  "description": "Simplify code review with AI",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "nodemon --exec node --no-warnings=ExperimentalWarning --loader ts-node/esm src/index.ts",
    "tests": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint .",
      "talisman --githook pre-commit"
    ]
  },
  "keywords": [
    "code review",
    "ai"
  ],
  "author": "Nikhil Samant",
  "license": "",
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/jest": "^29.5.12",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "smee-client": "^2.0.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "octokit": "^4.0.2"
  }
}
